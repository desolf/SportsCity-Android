<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.n1.city">

    <application
        android:name=".application.N1Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.signing.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.signing.SignUpActivity" />
        <activity android:name=".ui.profile.ProfileEditActivity" />
        <activity android:name=".ui.profile.ProfileViewActivity" />
        <activity android:name=".ui.signing.ForgotPasswordActivity" />
        <activity android:name=".ui.signing.ResetPasswordEmailSentActivity" />
        <activity android:name=".ui.profile.ChangePasswordActivity" />
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>